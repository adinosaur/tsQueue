#include "../include/tsQueue.h"
#include "gtest/gtest.h"

#include <pthread.h>

#include <vector>
#include <iostream>

using namespace std;

#define NTHREADS 10

TSQueue<int> q;
NTSQueue<int> nq;

vector<pthread_t> tids(NTHREADS);

static int counter = 0;

void* do_it(void* arg)
{
    for (int i = 0; i != 10; ++i)
    {
        q.push_back(++counter);
    }
    return NULL;
}

TEST(DINOSAUR_TSQUEUE, NTSQUEUE)
{
    for (int i = 0; i != NTHREADS; ++i)
        pthread_create(&tids.at(i), NULL, do_it, NULL);

    for (auto tid : tids)
        pthread_join(tid, NULL);

    while (!q.empty())
    {
        cout << q.pop_front() << endl;
    }
}

TEST(DINOSAUR_TSQUEUE, TSQUEUE)
{
    for (int i = 0; i != NTHREADS; ++i)
        pthread_create(&tids.at(i), NULL, do_it, NULL);
        
    for (auto tid : tids)
        pthread_join(tid, NULL);
    
    int l = q.pop_front();
    while (!q.empty())
    {
        r = q.pop_front();
        EXPECT_GT(l, r);
        l = r;
    }
}


int main(int ac, char** av)
{
    ::testing::InitGoogleTest(&ac, av);
    return RUN_ALL_TESTS();
}
